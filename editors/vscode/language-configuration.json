{
  "comments": {
    "lineComment": "#"
  },
  "wordPattern": "([a-zA-Z_][a-zA-Z0-9_.]*)|(\\.[a-zA-Z_][a-zA-Z0-9_.]*)",
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*[{(\\[]\\s*(#.*)?$",
    "decreaseIndentPattern": "^\\s*[})\\]]"
  },
  "onEnterRules": [
    {
      "beforeText": ".*(\\|>|%>%)\\s*(#.*)?$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": ".*\\+\\s*(#.*)?$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": ".*~\\s*(#.*)?$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": ".*(%\\w+%)\\s*(#.*)?$",
      "action": { "indent": "indent" }
    }
  ]
}
